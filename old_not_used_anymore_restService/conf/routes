# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
# GET     /index.html                           controllers.Application.index()
GET     /test.html                           controllers.Assets.at(path="/public", file="test.html")


# API METHODS

# uses query string params
GET     /api/ngrams/:ngramName             controllers.Ngrams.getNgram( ngramName : String )

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)


GET     /test                               controllers.Application.testMethod()
